{
  "name": "TaikoReverseProxy",
  "version": "0.1.0",
  "repository": "https://github.com/shiibe/TaikoReverseProxy.git",
  "author": "shiibe",
  "license": "Unlicense",
  "dependencies": {
    "chalk": "4.1.2",
    "express": "^4.18.1",
    "express-http-proxy": "^1.6.3",
    "hostile": "^1.3.3",
    "http-proxy-middleware": "^2.0.6",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "ncp": "^2.0.0",
    "pkg": "^5.8.0",
    "prettier": "^2.7.1"
  },
  "main": "./src/server.js",
  "bin": "./src/server.js",
  "pkg": {
      "scripts": "src/**/*.js",
      "targets": [
          "node16-win-x64"
      ],
      "assets": [
          "protobuf/**/*"
      ]
  },
  "scripts": {
    "start": "node --tls-min-v1.0 src/server.js",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json}\"",
    "build": "pkg . --options tls-min-v1.0 -o dist/TaikoReverseProxy.exe && npm run post-build",
    "post-build": "ncp ./src/config.defaults.toml ./dist/config.toml"
  }
}
